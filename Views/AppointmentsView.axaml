<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:ProyectoBD2.Models"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProyectoBD2.Views.AppointmentsView"
             x:DataType="models:Appointment">
    <Grid Margin="20" RowDefinitions="Auto,*,Auto">
        <TextBlock Text="Gestión de Citas" FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,15"/>
        <Grid Grid.Row="0" Margin="0,40,0,15" ColumnDefinitions="250,20,*">
            <ComboBox Grid.Column="0" x:Name="DepartmentComboBox" PlaceholderText="Seleccionar departamento" HorizontalAlignment="Stretch">
                <!-- <ComboBoxItem>Veterinaria</ComboBoxItem> -->
                <!-- <ComboBoxItem>Salón de Belleza</ComboBoxItem> -->
                <!-- <ComboBoxItem>Todos</ComboBoxItem> -->
            </ComboBox>
            
            <TextBox Grid.Column="2" x:Name="SearchTextBox" Watermark="Buscar citas..." />
        </Grid>
        
        <DataGrid Grid.Row="1"
                  x:Name="AppointmentsDataGrid"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  GridLinesVisibility="All"
                  BorderThickness="1"
                  BorderBrush="Gray"
                  Margin="0,10,0,10">
        </DataGrid>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="15" Margin="0,15,0,0">
            <Button x:Name="AddAppointmentButton" 
                    Content="Agregar Cita" 
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Width="150" 
                    Height="40"
                    Background="#0078D4"
                    Foreground="White"/>
            
            <Button x:Name="EditAppointmentButton" 
                    Content="Editar Cita"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Width="150" 
                    Height="40"
                    IsEnabled="{Binding ElementName=AppointmentsDataGrid, Path=SelectedItem, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Background="#218838"
                    Foreground="White"/>
            
            <Button x:Name="DeleteAppointmentButton" 
                    Content="Eliminar Cita"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Width="150" 
                    Height="40"
                    IsEnabled="{Binding ElementName=AppointmentsDataGrid, Path=SelectedItem, Converter={x:Static ObjectConverters.IsNotNull}}"
                    Background="#DC3545"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</UserControl>